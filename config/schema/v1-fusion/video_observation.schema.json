{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Video Detector Output Schema",
    "description": "Schema for short, pre-processed video detection outputs (no raw video).",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "timestamp": { "type": "string", "format": "date-time" },
      "session_id": { "type": "string" },
      "source_id": { "type": "string" },
      "video_detected": { "type": "boolean" },
      "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
      "description": {
        "type": "string",
        "description": "Optional; must not be required for decision logic."
      },
      "distance_m": { "type": "number", "minimum": 0.0 }
    },
    "required": ["timestamp", "video_detected"]
  }
  